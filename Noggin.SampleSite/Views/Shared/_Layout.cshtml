<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Noggin.SampleSite</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <header>
        <h1><a asp-controller="Home" asp-action="Index" class="navbar-brand">Noggin Auth Demo</a></h1>
        <nav>
            <ul class="nav-right">
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>Login with:</li>
                    <li><auth-link provider="github">GitHub</auth-link></li>
                    <li><auth-link provider="google">Google</auth-link></li>
                    <li><auth-link provider="facebook">Facebook</auth-link></li>
                    <li><auth-link provider="twitter">Twitter</auth-link></li>
                }
                else
                {
                    <li><a asp-controller="UserAdmin" asp-action="Index">User admin</a></li>
                    <li><a asp-controller="Home" asp-action="Logout">Log out</a></li>
                }
            </ul>

        </nav>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2021 - <a href="http://www.nogginbox.co.uk">Richard Garside (Nogginbox)</a></p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
